{
  "manifest_version": 3,
  "name": "Quirk AI Sidecar",
  "version": "0.1.0",
  "description": "Helper tools for VIN Solutions.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.vinsolutions.com/*",
    "https://vinsolutions.app.coxautoinc.com/*",
    "http://127.0.0.1:8765/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Quirk AI Sidecar"
  },
  "commands": {
    "trigger-quirk": {
      "description": "Open Quirk helper",
      "suggested_key": { "default": "Alt+Q" }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://vinsolutions.app.coxautoinc.com/vinconnect/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
