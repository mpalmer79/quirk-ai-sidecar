{
  "manifest_version": 3,
  "name": "Quirk AI Sidecar",
  "version": "0.1.0",
  "description": "Helper tools for VIN Solutions.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.vinsolutions.com/*",
    "https://vinsolutions.app.coxautoinc.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Quirk AI Sidecar"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.vinsolutions.com/*",
        "https://vinsolutions.app.coxautoinc.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "open-quirk-panel": {
      "suggested_key": { "default": "Alt+Q" },
      "description": "Toggle Quirk panel"
    }
  }
}
