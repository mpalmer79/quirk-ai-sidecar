{
  "manifest_version": 3,
  "name": "Quirk AI Sidecar",
  "version": "0.1.0",
  "description": "Helper tools for VIN Solutions.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.vinsolutions.com/*",
    "https://vinsolutions.app.coxautoinc.com/*",
    "http://127.0.0.1:8765/*"
  ],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Quirk AI Sidecar" },
  "content_scripts": [
    {
      "matches": [
        "https://*.vinsolutions.com/*",
        "https://vinsolutions.app.coxautoinc.com/*"
      ],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],
  "commands": {
    "toggle-sidecar": {
      "suggested_key": {
        "default": "Alt+Q",
        "windows": "Alt+Q"
      },
      "description": "Toggle Quirk Sidecar panel"
    }
  }
}
