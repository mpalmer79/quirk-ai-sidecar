{
  "manifest_version": 3,
  "name": "Quirk AI Sidecar",
  "version": "0.1.3",
  "description": "Helper tools for VIN Solutions.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "action": {
    "default_title": "Quirk AI Sidecar",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.vinsolutions.com/*",
    "https://vinsolutions.app.coxautoinc.com/*",
    "http://127.0.0.1:8765/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://vinsolutions.app.coxautoinc.com/vinconnect/*",
        "https://vinsolutions.app.coxautoinc.com/CarDashboard/*",
        "https://vinsolutions.app.coxautoinc.com/CarDashboard/Pages/*"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "trigger-quirk": {
      "description": "Open Quirk helper",
      "suggested_key": { "default": "Alt+Q" }
    }
  }
}
